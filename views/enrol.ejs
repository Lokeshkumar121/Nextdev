<script>
  const API_BASE = (location.hostname === 'localhost' || location.hostname === '127.0.0.1') 
    ? 'http://localhost:3000' : ''; // adjust if hosted

  function openEnrollForm(course, amount) {
    document.getElementById('courseName').value = course;
    document.getElementById('courseAmount').value = amount;
    document.getElementById('showCourse').innerText = course;
    document.getElementById('showAmount').innerText = amount;
    document.getElementById('enrollModal').classList.remove('hidden');
  }

  function closeEnrollForm() {
    document.getElementById('enrollModal').classList.add('hidden');
  }

  function closeSuccess() {
    document.getElementById('successModal').classList.add('hidden');
    // optionally reset form
    document.getElementById('enrollForm').reset();
  }

  document.getElementById('enrollForm').addEventListener('submit', async function(e){
    e.preventDefault();
    const name = document.getElementById('studentName').value.trim();
    const email = document.getElementById('studentEmail').value.trim();
    const phone = document.getElementById('studentPhone').value.trim();
    const course = document.getElementById('courseName').value;
    const amount = Number(document.getElementById('courseAmount').value);

    if(!name || !email || !phone) { alert('Please fill all fields'); return; }

    // 1) create an order on the server (Razorpay order)
    try {
      const res = await fetch(API_BASE + '/create-order', {
        method: 'POST',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify({ amount: amount, currency: 'INR', receipt: 'rcpt_' + Date.now() })
      });
      const orderData = await res.json();
      if(!orderData || !orderData.id) throw new Error('Could not create order');

      // 2) open Razorpay checkout with order_id
      const options = {
        key: orderData.key, // from server (Razorpay Key ID)
        amount: orderData.amount, // in paise
        currency: orderData.currency,
        name: "Zero‚ÜíHero Academy",
        description: `${course} Enrollment`,
        order_id: orderData.id,
        prefill: { name, email, contact: phone },
        handler: async function (paymentResp) {
          // paymentResp contains razorpay_payment_id, razorpay_order_id, razorpay_signature
          // save to backend DB
          const saveRes = await fetch(API_BASE + '/save-enrollment', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({
              name, email, phone, course, amount,
              paymentId: paymentResp.razorpay_payment_id,
              orderId: paymentResp.razorpay_order_id,
              signature: paymentResp.razorpay_signature
            })
          });
          const saved = await saveRes.json();
          document.getElementById('successText').innerText = `Saved: ${saved.saved ? 'Yes' : 'No'}. Payment id: ${paymentResp.razorpay_payment_id}`;
          closeEnrollForm();
          document.getElementById('successModal').classList.remove('hidden');
        },
        modal: { ondismiss: function(){ console.log('Checkout closed') } }
      };

      const rzp = new Razorpay(options);
      rzp.open();
    } catch(err) {
      console.error(err);
      alert('Error creating payment. See console for details.');
    }
  });


  
</script>
