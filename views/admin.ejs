<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
</head>
<body class="bg-gray-100">

  <!-- Header -->
  <header class="flex flex-col sm:flex-row justify-between items-center px-4 sm:px-6 py-4 bg-white shadow-md">
    <h1 class="text-xl sm:text-2xl font-bold text-blue-600 mb-2 sm:mb-0">Admin Dashboard</h1>
    <a href="/admin/logout" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 transition duration-300 text-sm sm:text-base">
      Logout
    </a>
  </header>

  <!-- Dashboard Content -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 py-6">
    <h2 class="text-2xl sm:text-3xl font-semibold text-center text-gray-800 mb-6">Contact Messages</h2>

    <div class="overflow-x-auto shadow-lg rounded-lg">
      <table class="min-w-full bg-white">
        <thead class="bg-blue-600 text-white text-sm sm:text-base">
          <tr>
            <th class="py-3 px-4 text-left">Name</th>
            <th class="py-3 px-4 text-left">Email</th>
            <th class="py-3 px-4 text-left">Phone</th>
            <th class="py-3 px-4 text-left">Message</th>
            <th class="py-3 px-4 text-left">Date</th>
          </tr>
        </thead>
        <tbody class="text-gray-700 text-sm sm:text-base">
          <% contacts.forEach(contact => { %>
            <tr class="border-b hover:bg-gray-100">
              <td class="py-2 px-4"><%= contact.name %></td>
              <td class="py-2 px-4"><%= contact.email %></td>
              <td class="py-2 px-4">
                <a href="https://wa.me/91<%= contact.phone %>?text=Hello Lokesh kumar this side, I received your message!" target="_blank" class="text-green-600 font-medium hover:underline break-all">
                  <%= contact.phone %>
                </a>
              </td>
              <td class="py-2 px-4 break-words"><%= contact.message %></td>
              <td class="py-2 px-4"><%= new Date(contact.date).toLocaleString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </main>
</body>
</html>
